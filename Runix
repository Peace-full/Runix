â”€â”€â”€ ASCII Banner â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

echo -e "${GRN} â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ•—   â–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ•—   â–ˆâ–ˆâ•—â–ˆâ–ˆâ•—â–ˆâ–ˆâ•—  â–ˆâ–ˆâ•—\nâ–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘â–ˆâ–ˆâ–ˆâ–ˆâ•—  â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘â•šâ–ˆâ–ˆâ•—â–ˆâ–ˆâ•”â•\nâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â–ˆâ–ˆâ•— â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘ â•šâ–ˆâ–ˆâ–ˆâ•”â• \nâ–ˆâ–ˆâ•”â•â•â•â• â–ˆâ–ˆâ•”â•â•â•â• â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘â•šâ–ˆâ–ˆâ•—â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘ â–ˆâ–ˆâ•”â–ˆâ–ˆâ•— \nâ–ˆâ–ˆâ•‘     â–ˆâ–ˆâ•‘     â•šâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•â–ˆâ–ˆâ•‘ â•šâ–ˆâ–ˆâ–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â• â–ˆâ–ˆâ•—\nâ•šâ•â•     â•šâ•â•      â•šâ•â•â•â•â•â• â•šâ•â•  â•šâ•â•â•â•â•šâ•â•â•šâ•â•  â•šâ•â•${NC}\n${BLU}Runix: Smart File Runner${NC}"

â”€â”€â”€ Config + Temp â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

RUNIX_DIR="$HOME/Runix" CONFIG_FILE="$RUNIX_DIR/config" SHORTCUT_FILE="$RUNIX_DIR/shortcuts" BIN_DIR="$RUNIX_DIR/bin" mkdir -p "$BIN_DIR" PREVIEW_EXTENSIONS="txt log csv md json xml html class put"

â”€â”€â”€ Git Update Check â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

check_update() { LATEST_URL="https://raw.githubusercontent.com/Peace-forever69/Runix/main/Runix" LOCAL_HASH=$(md5sum "$0" | awk '{print $1}') REMOTE_HASH=$(curl -s "$LATEST_URL" | md5sum | awk '{print $1}')

if [[ "$LOCAL_HASH" != "$REMOTE_HASH" ]]; then
    echo -e "${YEL}ğŸ”” Update available for Runix!${NC}"
    echo -e "${GRN}ğŸ“ Latest changes:${NC}"
    curl -s "$LATEST_URL" | grep -E '^# CHANGELOG:' | sed 's/# CHANGELOG: */- /'
    echo -ne "${BLU}âš™ï¸  Do you want to update now? (y/n): ${NC}"
    read -r ans
    if [[ "$ans" == "y" || "$ans" == "Y" ]]; then
        curl -s -o "$0" "$LATEST_URL"
        chmod +x "$0"
        echo -e "${GRN}âœ… Updated successfully. Please restart the script.${NC}"
        exit
    fi
fi

}

â”€â”€â”€ Load or Ask for Settings â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

load_config() { if [[ -f "$HOME/.pexrc" && ! -f "$CONFIG_FILE" ]]; then echo -e "${YEL}ğŸ“¦ Migrating old config to new location...${NC}" mkdir -p "$RUNIX_DIR" mv "$HOME/.pexrc" "$CONFIG_FILE" fi

if [[ ! -f "$CONFIG_FILE" ]]; then
    echo -e "${YEL}ğŸ”§ First time setup...${NC}"
    mkdir -p "$RUNIX_DIR"

    echo -ne "${BLU}ğŸ“ Enter your user folder path (where your code files are): ${NC}"
    read -r USER_FOLDER
    echo "user_folder=$USER_FOLDER" >> "$CONFIG_FILE"

    echo -e "${YEL}ğŸ‘ï¸ Choose preview mode:${NC}"
    echo -e "   ${GRN}[1]${NC} Always preview"
    echo -e "   ${GRN}[2]${NC} Never preview"
    echo -e "   ${GRN}[3]${NC} Ask every time"
    echo -ne "${BLU}Enter choice [1-3]: ${NC}"
    read -r CHOICE
    case "$CHOICE" in
        1) echo "preview=auto" >> "$CONFIG_FILE" ;;
        2) echo "preview=never" >> "$CONFIG_FILE" ;;
        3) echo "preview=ask" >> "$CONFIG_FILE" ;;
    esac

    echo -ne "${BLU}ğŸ§± Save compiled binaries after running? (y/n): ${NC}"
    read -r KEEP
    [[ "$KEEP" == "y" || "$KEEP" == "Y" ]] && echo "save_binaries=yes" >> "$CONFIG_FILE" || echo "save_binaries=no" >> "$CONFIG_FILE"

    touch "$SHORTCUT_FILE"
fi

USER_FOLDER=$(grep '^user_folder=' "$CONFIG_FILE" | cut -d= -f2)
PREVIEW_MODE=$(grep '^preview=' "$CONFIG_FILE" | cut -d= -f2)
SAVE_BINARIES=$(grep '^save_binaries=' "$CONFIG_FILE" | cut -d= -f2)

}

load_config check_update

â”€â”€â”€ Shortcuts â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

expand_shortcut() { grep -q "^$1=" "$SHORTCUT_FILE" && grep "^$1=" "$SHORTCUT_FILE" | cut -d= -f2- || echo "$1" }

â”€â”€â”€ Runix Functions â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

find_file() { find "$USER_FOLDER" -type f -name "$1" | head -n 1; }

find_java_main_class() { grep -E 'public\s+class\s+\w+' "$1" | grep -B 2 'public\s+static\s+void\s+main' | grep 'public\s+class' | sed -E 's/.class\s+([A-Za-z0-9_]+)./\1/' | head -n 1 }

show_info() { echo -e "${YEL}ğŸ”§ Runix Configuration:${NC}" echo "â€¢ User folder     : $USER_FOLDER" echo "â€¢ Preview mode    : $PREVIEW_MODE" echo "â€¢ Save binaries   : $SAVE_BINARIES" echo "â€¢ Config file     : $CONFIG_FILE" echo "â€¢ Shortcut file   : $SHORTCUT_FILE" }

run_file() { INPUT=$(expand_shortcut "$1") MODE="$2" FILE=$(find_file "$INPUT") [[ -z "$FILE" ]] && echo -e "${RED}âŒ File not found: $INPUT${NC}" && return

EXT="${FILE##*.}"
BASE="${FILE%.*}"
OUT="$BIN_DIR/$(basename "$BASE")"

echo -e "${BLU}ğŸ“ File found: $FILE${NC}"
cd "$(dirname "$FILE")" || return 1

START=$(date +%s)
USAGE_BEFORE=$(ps -o rss= -p $$)

compile() {
    case "$EXT" in
        c) clang -fsyntax-only "$FILE" || return 1; clang "$FILE" -o "$OUT" ;;
        cpp|cc|cxx) clang++ -fsyntax-only "$FILE" || return 1; clang++ "$FILE" -o "$OUT" ;;
        py) python -m py_compile "$FILE" ;;
        java) javac "$FILE" -d "$BIN_DIR" ;;
        *) return 1 ;;
    esac
}

execute() {
    case "$EXT" in
        c|cpp|cc|cxx) "$OUT" ;;
        py) python "$FILE" ;;
        java) MAIN_CLASS=$(find_java_main_class "$FILE"); [[ -n "$MAIN_CLASS" ]] && java -cp "$BIN_DIR" "$MAIN_CLASS" ;;
        js) node "$FILE" ;;
        sh) bash "$FILE" ;;
        *) return 1 ;;
    esac
}

case "$MODE" in
    c) compile ;;
    r) execute ;;
    cr|rc|"") compile && execute ;;
    *) echo -e "${RED}âŒ Unknown mode: $MODE${NC}"; return ;;
esac

END=$(date +%s)
USAGE_AFTER=$(ps -o rss= -p $$)
MEM_USAGE_KB=$((USAGE_AFTER - USAGE_BEFORE))

echo -e "${YEL}â±ï¸ Time taken: $((END - START))s | ğŸ§  Memory used: ${MEM_USAGE_KB}KB${NC}"

PREVIEW_FILES=()
for ext in $PREVIEW_EXTENSIONS; do
    for f in ./*.$ext; do [[ -f "$f" ]] && PREVIEW_FILES+=("$f"); done
done

if [[ ${#PREVIEW_FILES[@]} -gt 0 ]]; then
    case "$PREVIEW_MODE" in
        auto) DO_PREVIEW="y" ;;
        never) DO_PREVIEW="n" ;;
        *) echo -ne "${BLU}ğŸ‘ï¸  View output files? (y/n): ${NC}"; read -r DO_PREVIEW ;;
    esac

    if [[ "$DO_PREVIEW" == "y" || "$DO_PREVIEW" == "Y" ]]; then
        for f in "${PREVIEW_FILES[@]}"; do
            echo -e "\n${YEL}--- $f ---${NC}"
            less "$f"
        done
    fi
fi

[[ "$SAVE_BINARIES" != "yes" && -f "$OUT" ]] && rm -f "$OUT"
cd - >/dev/null

}

clean_bin() { echo -e "${YEL}ğŸ§¹ Cleaning binaries...${NC}"; rm -rf "$BIN_DIR"/*; }

run_all() { for file in "$USER_FOLDER"/; do [[ -f "$file" ]] && case "$file" in .c|.cpp|.cc|.cxx|.py|.java|.js|*.sh) run_file "$(basename "$file")" ;; esac done }

search_file() { echo -ne "${BLU}ğŸ” Enter filename to search: ${NC}" read -r name echo -e "${YEL}ğŸ” Search results in $USER_FOLDER:${NC}" find "$USER_FOLDER" -type f -iname "$name" | while read -r f; do SIZE=$(du -h "$f" | cut -f1) TYPE=$(file -b "$f") echo -e "${GRN}â€¢ $(basename "$f")${NC} | $TYPE | $SIZE | $f" done }

change_settings() { echo -ne "${BLU}ğŸ“ Enter new user folder: ${NC}" read -r FOLDER sed -i '/^user_folder=/d' "$CONFIG_FILE" echo "user_folder=$FOLDER" >> "$CONFIG_FILE"

echo -e "${YEL}ğŸ‘ï¸ Preview mode:${NC}"
echo -e "   ${GRN}[1]${NC} Always preview"
echo -e "   ${GRN}[2]${NC} Never preview"
echo -e "   ${GRN}[3]${NC} Ask every time"
echo -ne "${BLU}Enter choice [1-3]: ${NC}"
read -r CHOICE
sed -i '/^preview=/d' "$CONFIG_FILE"
case "$CHOICE" in
    1) echo "preview=auto" >> "$CONFIG_FILE" ;;
    2) echo "preview=never" >> "$CONFIG_FILE" ;;
    3) echo "preview=ask" >> "$CONFIG_FILE" ;;
esac

echo -ne "${BLU}ğŸ§± Save compiled binaries after running? (y/n): ${NC}"
read -r KEEP
sed -i '/^save_binaries=/d' "$CONFIG_FILE"
[[ "$KEEP" == "y" || "$KEEP" == "Y" ]] && echo "save_binaries=yes" >> "$CONFIG_FILE" || echo "save_binaries=no" >> "$CONFIG_FILE"

}

add_shortcut() { echo -ne "${BLU}ğŸ”‘ Shortcut name: ${NC}" read -r KEY echo -ne "${BLU}ğŸ“„ Command or file name to map it to: ${NC}" read -r VAL echo "$KEY=$VAL" >> "$SHORTCUT_FILE" echo -e "${GRN}âœ… Shortcut added. Use: run $KEY${NC}" }

show_help() { echo -e "${YEL}ğŸ“˜ Runix Commands:${NC}" echo "  run file.ext       â–¶ï¸  Compile & run file" echo "  run file.ext c     â–¶ï¸  Only compile" echo "  run file.ext r     â–¶ï¸  Only run (skip compile)" echo "  run runall         â–¶ï¸  Run all files" echo "  run clean          â–¶ï¸  Clear compiled binaries" echo "  run search         â–¶ï¸  Search for files" echo "  run settings       â–¶ï¸  Reconfigure Runix" echo "  run info           â–¶ï¸  Show Runix settings" echo "  run shortcut       â–¶ï¸  Add shortcut for file/command" echo "  run uninstall      â–¶ï¸  Remove Runix" echo "  run update         â–¶ï¸  Manually update Runix" echo "  run help           â–¶ï¸  Show help message" }

â”€â”€â”€ Command Dispatcher â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

COMMAND="${1,,}" MODE="${2,,}" case "$COMMAND" in clean) clean_bin ;; runall) run_all ;; uninstall) echo -e "${RED}âš ï¸ Uninstall Runix? (y/n): ${NC}" read -r CONFIRM [[ "$CONFIRM" == "y" || "$CONFIRM" == "Y" ]] && { rm -f "$HOME/bin/run" "$HOME/bin/Runix" rm -rf "$RUNIX_DIR" echo -e "${GRN}ğŸ§¹ Uninstalled.${NC}" } || echo "Cancelled." ;; update) echo -e "${YEL}ğŸ”„ Manual update...${NC}" curl -s -o "$0" "https://raw.githubusercontent.com/Peace-forever69/Pex/main/Runix" chmod +x "$0" echo -e "${GRN}âœ… Updated.${NC}" ;; settings) change_settings ;; info) show_info ;; search) search_file ;; shortcut) add_shortcut ;; help|--help|-h|"") show_help ;; *) run_file "$1" "$2" ;; esac

